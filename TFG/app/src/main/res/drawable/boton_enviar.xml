<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF8E38" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#B3FF8E38" />
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B3FF8E38" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#FF8E38" />
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
